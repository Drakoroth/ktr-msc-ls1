<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/bb54014cd5.js"></script>
    <title>Library</title>
    <%- include navbar_connec %>
  </head>
  <body>
    <div class="container">
      <% if(result.length > 0) {%>
        <div class="row">
          <% for(var i = 0; i < result.length; i++){ %>
            <div class="card col-md-4 text-center" style="margin-left:1%; margin-right: 1%; margin-bottom: 2%;">
              <h1 class="card-header"><%= result[i].last_n + " " + result[i].first_n %></h1>
              <div class="card-body">
                <% if(result[i].enterprise != ""){ %>
                  <h3><i class="fas fa-building"></i><%= "  " + result[i].enterprise %><h3>
                <% } %>
                <% if(result[i].tel != ""){ %>
                  <h3><i class="fas fa-phone-square-alt"></i><%= "  " + result[i].tel %><h3>
                <% } %>
                <h3><i class="fas fa-at"></i><a href="mailto:<%= result[0].mail %>"><%= "  " + result[i].mail %></a><h3>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <h1 class="text-center">No cards in the library...</h1>
      <% } %>
    </div>
  </body>
</html>
