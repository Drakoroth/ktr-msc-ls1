<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>BCM Sign Up</title>
    <%- include navbar %>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <h5 class="card-header">Join BCM</h5>
        <div class="card-body">
            <form method="post" action="/inscrip">
              <div class="form-group">
                <label for="nom">Last Name</label>
                <input type="text" class="form-control" id="last_n" placeholder="Ex: Durant" name="last_n">
              </div>
              <div class="form-group">
                <label for="prenom">First Name</label>
                <input type="text" class="form-control" id="first_n" placeholder="Ex: Benoit" name="first_n">
              </div>
              <div class="form-group">
                <label for="mail">Email address</label>
                <input type="email" class="form-control" id="mail" aria-describedby="emailHelp" placeholder="example@email.com" name="mail">
              </div>
              <div class="form-group">
                <label for="mdp">Password</label>
                <input type="password" class="form-control" id="mdp" placeholder="At least 8 characters" name="mdp">
              </div>
              <div class="form-group">
                <label for="enterprise">Enterprise (Optional)</label>
                <input type="text" class="form-control" id="enterprise" placeholder="Your company name" name="enterprise">
              </div>
              <div class="form-group">
                <label for="telephone">Telephone (Optional)</label>
                <input class="form-control" type="tel" placeholder="0XXXXXXXXX" id="telephone" name="tel">
              </div>
              <button type="submit" class="btn btn-primary">Sign Up</button>
              </form>
            </div>
        </div>
      </div>
  </body>
</html>
