<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/bb54014cd5.js"></script>
    <title>Create a new BCard</title>
    <%- include navbar_connec %>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <h5 class="card-header">New BCard</h5>
        <div class="card-body">
            <form method="post" action="/new_bc">
              <div class="form-group">
                <label for="nom">Last Name (Optional)</label>
                <input type="text" class="form-control" id="last_n" placeholder="Ex: Durant" name="last_n">
              </div>
              <div class="form-group">
                <label for="prenom">First Name (Optional)</label>
                <input type="text" class="form-control" id="first_n" placeholder="Ex: Benoit" name="first_n">
              </div>
              <div class="form-group">
                <label for="mail">Email address</label>
                <input type="email" class="form-control" id="mail" aria-describedby="emailHelp" placeholder="example@email.com" name="mail">
              </div>
              <div class="form-group">
                <label for="enterprise">Enterprise (Optional)</label>
                <input type="text" class="form-control" id="enterprise" placeholder="Your company name" name="enterprise">
              </div>
              <div class="form-group">
                <label for="telephone">Telephone (Optional)</label>
                <input class="form-control" type="tel" placeholder="0XXXXXXXXX" id="telephone" name="tel">
              </div>
              <button type="submit" class="btn btn-primary">Create</button>
              </form>
            </div>
        </div>
      </div>
  </body>
</html>
