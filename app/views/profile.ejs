<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/bb54014cd5.js"></script>
    <title>Profile</title>
    <%- include navbar_connec %>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <h1 class="card-header text-center"><%= result[0].last_n + " " + result[0].first_n %></h1>
        <div class="card-body">
          <% if(result[0].enterprise != ""){ %>
            <h3><i class="fas fa-building"></i><%= "  " + result[0].enterprise %><h3>
          <% } %>
          <% if(result[0].tel != ""){ %>
            <h3><i class="fas fa-phone-square-alt"></i><%= "  " + result[0].tel %><h3>
          <% } %>
          <h3><i class="fas fa-at"></i><a href="mailto:<%= result[0].mail %>"><%= "  " + result[0].mail %></a><h3>
          <br>
          <a href="/create_bcard"><button type="button" class="btn btn-info justify-content-center" style="color: white">Create a new BCard</button></a>
          <a href="/library"><button type="button" class="btn btn-success justify-content-center" style="color: white">My BCard Library</button></a>
        </div>
      </div>
    </div>
  </body>
</html>
